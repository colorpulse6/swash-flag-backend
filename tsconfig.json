{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es6",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middleware/*": ["src/middleware/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}